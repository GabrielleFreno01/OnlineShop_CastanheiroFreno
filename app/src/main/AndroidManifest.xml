<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.onlineshop_castanheirofreno">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".OrderDetailsActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".ItemsListActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="Categories" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ProductDescriptionActivity" />
        <activity
            android:name=".CartActivity"
            android:label="My Cart" />
        <activity android:name=".ConfirmationActivity" />
    </application>

</manifest>