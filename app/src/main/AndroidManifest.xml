<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.onlineshop_castanheirofreno">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.android.onlineshop_castanheirofreno.ui.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name="com.android.onlineshop_castanheirofreno.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.android.onlineshop_castanheirofreno.ui.AddNewItemActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar">
        </activity>

        <activity
            android:name="com.android.onlineshop_castanheirofreno.ui.ConfirmationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar">
        </activity>

        <activity
            android:name="com.android.onlineshop_castanheirofreno.ui.ItemsListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar">
        </activity>

        <activity
            android:name="com.android.onlineshop_castanheirofreno.ui.OrderDetailsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar">
        </activity>

        <activity
            android:name="com.android.onlineshop_castanheirofreno.ui.ProductDescriptionActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar">
        </activity>

        <activity
            android:name="com.android.onlineshop_castanheirofreno.ui.ModifyProductActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar">
        </activity>



    </application>

</manifest>