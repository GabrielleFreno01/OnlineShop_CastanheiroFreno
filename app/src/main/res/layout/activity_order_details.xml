<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.onlineshop_castanheirofreno.ui.orders.OrderDetailActivity">

    <ScrollView
        android:id="@+id/sv_order_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <LinearLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/basicTextSize"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"/>

                    <TextView
                        android:id="@+id/textview_id_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/basicTextSize"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/textView_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="2"
                        android:text=""
                        android:textSize="@dimen/basicTextSize" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/apple_imac_1499" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/label_product_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_item_number"
                    android:textSize="@dimen/basicTextSize"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_product_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:textSize="@dimen/basicTextSize" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/label_product_name"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="@string/productname"
                    android:textSize="@dimen/basicTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/colorText"
                    android:text=""
                    android:textSize="@dimen/basicTextSize" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/label_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:layout_column="0"
                    android:text="@string/price"
                    android:textSize="@dimen/basicTextSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textColor="@color/colorText"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:textSize="@dimen/basicTextSize" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/label_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="@string/creation_date"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/basicTextSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:layout_column="1"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:textSize="@dimen/basicTextSize" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/tablerow_delivery_date">

                <TextView
                    android:id="@+id/label_delivery_date"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="@string/delivery_date"
                    android:textSize="@dimen/basicTextSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView_delivery_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/colorText"
                    android:text=""
                    android:textSize="@dimen/basicTextSize" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:id="@+id/tablerow_deliver_button">

                <Button
                    android:id="@+id/button_deliver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorText"
                    android:layout_column="0"
                    android:background="@color/validate"
                    android:text="@string/button_deliver"
                    android:textSize="@dimen/btnTextSize"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:id="@+id/tablerow_changeProduct_button">

                <Button
                    android:id="@+id/button_change_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:textColor="@color/colorText"
                    android:text="@string/button_changeProduct"

                    android:textSize="@dimen/btnTextSize"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:id="@+id/tablerow_cancel_button">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:background="@color/cancel"
                    android:textColor="@color/colorText"
                    android:text="@string/button_cancel"
                    android:textSize="@dimen/btnTextSize" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>