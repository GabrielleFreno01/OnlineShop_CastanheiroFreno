<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.android.onlineshop_castanheirofreno.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_category"
            app:destination="@id/nav_category" />
        <action
            android:id="@+id/action_nav_home_to_nav_orders"
            app:destination="@id/nav_orders" />
        <action
            android:id="@+id/action_nav_home_to_nav_cart"
            app:destination="@id/nav_cart" />
    </fragment>



    <fragment
        android:id="@+id/nav_category"
        android:name="com.android.onlineshop_castanheirofreno.ui.category.CategoryFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/nav_orders"
        android:name="com.android.onlineshop_castanheirofreno.ui.orders.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/order_list_item" />

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.android.onlineshop_castanheirofreno.ui.cart.CartFragment"
        android:label="My cart"
        tools:layout="@layout/fragment_cart" />
</navigation>