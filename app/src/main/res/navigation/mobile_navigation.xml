<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_description">

    <fragment
        android:id="@+id/nav_description"
        android:name="com.android.onlineshop_castanheirofreno.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.android.onlineshop_castanheirofreno.ui.home.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home_second">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_description" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.android.onlineshop_castanheirofreno.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"/>



    <fragment
        android:id="@+id/nav_category"
        android:name="com.android.onlineshop_castanheirofreno.ui.category.CategoryFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/nav_orders"
        android:name="com.android.onlineshop_castanheirofreno.ui.orders.OrderFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.android.onlineshop_castanheirofreno.ui.cart.CartFragment"
        android:label="My cart"
        tools:layout="@layout/fragment_cart" />
</navigation>